// SOA (Structure-of-Arrays) example for HEIDIC
// This demonstrates SOA syntax for both mesh data and ECS components

// SOA mesh data - optimized for CUDA/OptiX ray tracing
mesh_soa Mesh {
    positions: [Vec3],
    uvs: [Vec2],
    colors: [Vec3],
    indices: [i32]
}

// SOA component - optimized for ECS iteration
component_soa Velocity {
    x: [f32],
    y: [f32],
    z: [f32]
}

// Regular component for comparison (AOS - Array of Structs)
component Position {
    x: f32,
    y: f32,
    z: f32
}

